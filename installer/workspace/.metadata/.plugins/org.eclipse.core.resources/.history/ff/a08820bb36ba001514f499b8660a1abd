{
	protected:
		// Handlers for MyFrame1 events.
		void MyFrame1OnClose( wxCloseEvent& event );
		void m_button1OnButtonClick( wxCommandEvent& event );
		void m_button2OnButtonClick( wxCommandEvent& event );
	public:
